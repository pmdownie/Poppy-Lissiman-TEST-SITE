.cart__row {
	border: 0;
}

.cart__row td {
	float: left;
	width: 20%;
	border: 0;
}

a.cart__remove {
    position: relative;
    margin-bottom: -12px;
    margin-left: 94%;
    img {
    	width: 10px;
    }
}

.cart-item span.block {
	display: block;
}

.cart-item a.h6 {
	color: #111;
	margin: 10px 0 4px;
}

.cart-item a.h6:hover {
	color: #ef4315;
}

.cart-disclaimer p.margin-top {
    margin-top: 25px;
    font-weight: 600;
}

span.cart__subtotal-title.h6 {
    display: inline-block;
}

input.update-cart {
    padding: 2px 1px;
    letter-spacing: 1px;
    opacity: 0.8;
    line-height: 13px;
    text-transform: uppercase;
    margin-bottom: 12px;
}

.template-cart .h2 {
	margin-bottom: 25px;
}


.checkout_row {
    border-top: 2px solid #efefef;
}

@media only screen and (max-width: 768px) {
    .cart__row td {
        width: 33.33%;
    }
}

@media only screen and (max-width: 480px) {
    .cart__row td {
        width: 50%;
    }   
}
