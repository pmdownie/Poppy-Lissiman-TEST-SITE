body .theme-simple #mailmunch-optin-form {
    padding: 270px 50px 0 80px;
}

#mailmunch-optin-form {
    background-color: transparent;
    background-image: url('https://cdn.shopify.com/s/files/1/1087/1054/t/2/assets/popup.png?14465954749768869197');
    height: 530px;
    background-size: 100% 100%;
}

body .theme-simple #mailmunch-optin-form input.text-field, body .theme-simple #mailmunch-optin-form input.email-field {
    border: 0;
    border-bottom: 1px solid #000;
    display: block;
    color: rgba(0,0,0,1);
    padding: 8px;
    height: 37px;
    width: 100%;
    margin-bottom: 15px;
    font-family: futura;
    text-transform: uppercase;
    font-size: 12px;
    letter-spacing: 0.5px;
}

body .theme-simple #mailmunch-optin-form input.submit {
    font-weight: normal;
    padding: 17px;
    display: inline-block;
    width: 100%;
    border-radius: 3px;
    font-size: 12px;
    border: 0;
    font-family: futura;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}