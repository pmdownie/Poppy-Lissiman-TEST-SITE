
.site-footer {
	background-color: #ECECEC;
}

.footer-padding {
	padding: 10px 0;
}

.footer-padding-small {
	padding: 4px 0;
}

.footer-menu ul {
	margin-bottom: 0;
	margin-left: 30px;
}

.footer-nav__item {
	display: inline-block;
	padding-right: 35px;
	a {
	    font-weight: 600;
	    text-transform: uppercase;
	    letter-spacing: 1px;
	    font-size: 10px;
	    color: #222;
	}
}

footer .input-group .input-group-field,
footer .input-group .btn {
	height: 30px;
	text-transform: uppercase;
	font-size: 12px;
}


@media screen and (min-width: 769px) {
	.site-footer {
	    padding: 0;
	}
}

@media screen and (max-width: 480px) {
	.footer-padding-small {
	    padding: 4px 0;
	    padding-left: 50px;
	}
}