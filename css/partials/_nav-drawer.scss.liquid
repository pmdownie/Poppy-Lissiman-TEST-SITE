.js-drawer-open-left .drawer--left {
	-ms-transform: translateX(100%);
    -webkit-transform: translateX(100%);
    transform: translateX(100%);
}

.js-drawer-open-left .is-moved-by-drawer {
	-ms-transform: translateX(190px);
    -webkit-transform: translateX(190px);
    transform: translateX(190px);
}

.drawer--left {
	width: 190px;
	left: -190px;
	border: 0;
}

.drawer {
	top: 46px;
	background-color: #f3f2f2;
}

.drawer.drawer--left {
	padding: 0;
}

.drawer .desktop-nav.first-list {    
    background: #ffc5ab; 
    background: -moz-linear-gradient(top,  #ffc5ab 0%, #ff966c 100%); 
    background: -webkit-linear-gradient(top,  #ffc5ab 0%,#ff966c 100%);
    background: linear-gradient(to bottom,  #ffc5ab 0%,#ff966c 100%); 
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffc5ab', endColorstr='#ff966c',GradientType=0 ); 
    li a {
        color: #fff;
    }
}

.desktop-nav__item {
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2px;
}

.desktop-nav__item.big-padding {
    padding: 15px 15px 4px;
}

.desktop-sub-nav .desktop-nav__item {
    padding: 2px 15px;
}

.main-nav .desktop-nav__link {
    display: inline-block;
    width: 100%;
    padding: 5px 15px;
}

.desktop-nav__img {
    padding: 0 15px 1px;
}

.desktop-child-nav {
    line-height: 27px;
    padding-bottom: 10px;
}

.desktop-nav li {
	margin-bottom: 0; 
}

.desktop-nav.main-nav {
    padding-top: 5px;
}

.drawer.drawer--left .main-nav a:hover {
    color: #fff;
    opacity: 1;
}

.drawer--left .desktop-nav a[href*="style"]:hover {
    background-color: #2eb7ad;
}

.drawer--left .desktop-nav a[href*="about-us"]:hover {
    background-color: #fce551;
}

.drawer--left .desktop-nav a[href*="contact"]:hover {
    background-color: #f90016;
}

.desktop-child-nav__item:hover,
.Shop .mobile-nav__sublist .mobile-nav__item:hover {
    background-color: #077cff;
    a {
    	color: #fff;
    }
}

.desktop-child-nav__link {
	padding: 0 15px;
	text-transform: uppercase;
	letter-spacing: 1px;
	margin-bottom: 0;
}

.desktop-child-nav__link {
    width: 100%;
    display: inline-block;
}

.background-color-white {
    background-color: #fff;
}

.nav__img {
    height: 100px;
    background-size: cover;
    overflow: hidden;
    margin-bottom: 5px;
}

.desktop-nav__img p {
    line-height: 17px;
}

.desktop-nav.desktop-sub-nav {
    position: absolute;
    bottom: 10px;
    width: 100%;
}

.desktop-nav.desktop-sub-nav .desktop-nav__item {
	font-size: 10px;
}



