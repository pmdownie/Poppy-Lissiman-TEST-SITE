h4.home-h5 {
    font-size: 22px;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 2px;
    padding-bottom: 40px;
    padding-top: 20px;
    position: relative;
}

.home-blog-block h4.home-h5 {
    color: #FF3700;
}

h4.home-h5:before {
    content: '';
    background-color: #E2E2E2;
    width: 40px;
    height: 4px;
    position: absolute;
    top: 65px;
    left: 50%;
    transform: translateX(-50%);
}

.home-blog-block {
	background-color: #fafafa;
}