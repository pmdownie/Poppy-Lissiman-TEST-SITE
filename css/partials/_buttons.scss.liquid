.pl-button {
    display: inline-block;
    padding: 15px 42px;
    text-transform: uppercase;
    font-weight: 600;
    letter-spacing: 1px;
    font-size: 13px;
    color: #ff3700;
    border-width: 2px; 
    border-style: solid;
}

.pl-button:hover {
    opacity: 0.6;
}

.pl-button-outline {
    border-style: solid;
    border-width: 4px;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    padding: 5px 45px;
    font-family: "futura-pt", sans-serif;
}

.blue-button {   
    background: #66ddff;
    border-bottom-color: #319ebd;
    border-right-color: #319ebd;
    border-top-color: #ACEBFD;
    border-left-color: #acebfd;
}

.yellow-button {
    background: #E1FF00;
    border-bottom-color: #acc245;
    border-right-color: #acc245;
    border-top-color: #f0fbb1;
    border-left-color: #f0fbb1;
}

.blue-button-outline {
    color: #077CFF;
    border-color: #077CFF;
}

.white-button-outline {
    color: #fff;
}

.black-button-outline {
    color: #222;
}

.blue-button-outline:hover,
.white-button-outline:hover {
    background-color: #ea4600;
    color: #fff;
    border-color: #f2d6a0;
}

.login--btn.btn:hover {
    opacity: 0.6;
}

.btn-small {
    font-size: 11px;
    border-width: 3px;
    padding: 5px 28px;
}

.home-button-padding {
	margin-top: 40px;
}

.button-bottom-padding {
    margin-bottom: 40px;
}

.cart-button-secondary {
    display: inline-block;
    width: 100%;
    text-align: center;
    opacity: 0.4;
    margin-bottom: 10px;
}