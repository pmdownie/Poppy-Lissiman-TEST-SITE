
/* ---- Home Feature Posts ---- */

.editorial-post-home {
	padding: 10px;
	padding-left: 30px;
	img {
		margin-bottom: 4px;
	}
}

.tag {
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 11px;
    margin-bottom: 5px;
}

/* ---- Blog Page ---- */

.blog-content {
	margin-top: 10px;
}

.blog-section__margin-bottom {
	margin-bottom: 50px;
}

.grid.editorial-older-posts .grid__item {
    height: 450px;
    margin-bottom: 30px;
}

.image-hover-up img {
    transition: all 0.25s ease;
}

.image-hover-up:hover img {
    -webkit-transform: translateY(-7px);
    -moz-transform: translateY(-7px);
    -ms-transform: translateY(-7px);
    -o-transform: translateY(-7px);
    transform: translateY(-7px);
    opacity: 0.85;
}	


/*----- Tabs -----*/
.tabs {
    width:100%;
    display:inline-block;
    margin-top: 10px;
}
 
    /*----- Tab Links -----*/
    /* Clearfix */
    .tab-links:after {
        display:block;
        clear:both;
        content:'';
    }
 
    .tab-links li {
        margin:0;
        float:left;
        list-style:none;
    }
 
        .tab-links a {
            padding: 15px 28px;
            display:inline-block;
            background:#f9f9f9;
            font-size:11px;
            letter-spacing: 1px;
            font-weight:600;
            color:#ddd;
            text-transform: uppercase;
            transition:all linear 0.15s;
        }
 
     
 
    li.active a, li.active a:hover {
        background:#f3f3f3;
        color:#ef4315;
    }
 
    /*----- Content of Tabs -----*/
    .tab-content {
        padding:15px;
        background:#f3f3f3;
    }
 
        .tab {
            display:none;
        }
 
        .tab.active {
            display:block;
        }

        .blog-sidebar__section {
		    padding: 5px 30px 5px 12px;
		}

		.blog-sidebar__tab-body .grid--full {
			margin-bottom: 7px;
		}

		.recent-articles-title a {
		    color: #222;
		    font-size: 11px;
		    line-height: 16px;
		    margin-bottom: 0;
		    text-transform: uppercase;
		    position: relative;
		    display: block;
		    padding-left: 15px;
		}

		.recent-articles-title time {
			color: #ccc;
			font-size: 11px;
			padding-left: 15px;
		}

		.tags li {
		    padding: 5px 0 7px;
		    margin-bottom: 0;
		    border-bottom: 1px solid #eee;
		}

		.tags li:first-child {
		    border-top: 1px solid #eee;
		}

		.tags a {
		    color: #444;
		    text-transform: uppercase;
		    letter-spacing: 1px;
		    font-size: 11px;
		    font-weight: 600;
		}

.article-paginate {
    padding-top: 40px;
}

.hand img {
    width: 66px;
    vertical-align: middle;
}

.prev-hand img {
    padding-right: 6px;
}

.next-hand img {
    padding-left: 6px;
}

.hand a {
    vertical-align: middle;
    position: relative;
    top: 5px;
    text-transform: uppercase;
    font-weight: 600;
    color: #222;
    font-size: 11px;
    letter-spacing: 1px;
}