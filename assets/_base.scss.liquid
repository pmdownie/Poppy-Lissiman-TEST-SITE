body.template-index.js-drawer-open {
    overflow-x: visible;
}

body.js-drawer-open {
    overflow: visible;
}

body.template-index {
	overflow-x: hidden;
	 .main-content {
		margin-top: 0; 
		padding-bottom: 0;
		background-color: #fff;
	}
}

#style .main-content {
	margin-top: 45px;
	padding-bottom: 0;
}

.main-content {
	margin-top: 90px;
	padding-bottom: 160px;
}

.home-block {
	padding-top: 55px;
	padding-bottom: 55px;
}

hr {
	border: 0;
	margin: 0;
}

ul, ul ul {
	margin: 0;
}

ul li {
	list-style-type: none;
}

*:focus, input:focus, *:active, input {
	outline: none;
}

.centered {
	margin-left: 50%;
	transform: translateX(-50%);
}

.grid.padding-top {
	padding-top: 30px;
}

.grid__item.padding-right {
	padding-left: 0;
	padding-right: 30px;
}

.grid__item.less-padding-left {
	padding-left: 15px;
}

.grid__item.padding-left-right {
	padding: 0 40px;
}

.small--show {
	display: none;
}

.drawer {
	z-index: 100;
}

.home-arm {
	position: absolute;
}

#arm-one {
	width: 210px;
    top: 80vh;
    left: -20px;
}

#arm-two {
    right: -10px;
    margin-top: -90px;
}

::-webkit-scrollbar-track
{
    -webkit-box-shadow: 0;
    background-color: transparent;
}

::-webkit-scrollbar
{
    width: 0;
    background-color: transparent;
}

@media only screen and (min-width: 768px) {
	.medium-down--show {
	    display: none;
	}
}

@media only screen and (max-width: 480px) {
	.push--small--one-twelfth {
	    left: 8.333%;
	}
	
	.mobile__margin-bottom {
	    margin-bottom: 30px;
	}

	#arm-one {
	    width: 140px;
	    top: 82vh;
	}

	#arm-two {
	    width: 130px;
	    margin-top: -50px;
	}
}