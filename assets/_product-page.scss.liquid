.product-single h1 {
    position: relative;
    width: 280%;
    margin-top: 30px;
    margin-bottom: 10px;
}

.product-single__photos img {
    padding-left: 120px;
}

.product-single__photos li, 
.product-single__thumbnails li {
	margin-bottom: 10px;
}

.vendor {
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

button#AddToCart {
    margin: 22px 0;
}

.small-title {
    margin-bottom: 10px;
    letter-spacing: 1px;
    font-size: 12px;
}

.social-share {
	margin-bottom: 20px;
}

.selector-wrapper {
	display: none;
}

.mobile__product-title h1,
.mobile__product-title span {
    position: relative;
    z-index: 60;
}

.mobile__product-photos {
    margin-top: -100px;
}

.mobile-slick__product-photos button {
    position: absolute;
    z-index: 50;
    top: 0;
    bottom: 0;
    width: 50px;
    font-size: 0;
}

.mobile-slick__product-photos button.slick-prev {
    left: 0;
}

.mobile-slick__product-photos button.slick-next {
    right: 0;
}

.mobile-slick__product-photos button:before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    -moz-transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
    -o-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    height: 23px;
    width: 12px;
    background-repeat: no-repeat;
    background-size: 100%;
}

.mobile-slick__product-photos button.slick-prev:before {
    background-image: url({{ 'mobile-prev.png' | asset_url }});
}

.mobile-slick__product-photos button.slick-next:before {
    background-image: url({{ 'mobile-next.png' | asset_url }});
}

@media only screen and (max-width: 768px) {
    .product-single__photos img {
        padding-left: 0;
    }
    .product-single h1 {
        width: 100%;
        margin-top: 0;
    }
    #productSelect {
        display: none;
    }
    button#AddToCart {
        margin: 22px 0 0;
        width: 100%;
    }
}

