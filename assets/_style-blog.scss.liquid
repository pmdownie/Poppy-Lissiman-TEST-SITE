/* ---- Home Feature Posts ---- */

.style-blog-title {
    max-width: 340px;
    padding: 10px 0 40px;
}

.grid.masonary-grid {
    -webkit-column-count: 3;
    -webkit-column-gap: 0;
    -moz-column-count: 3;
    -moz-column-gap: 0;
    column-count: 3;
    column-gap: 0;
}

.masonary-grid .grid__item {
    display: inline-block;
    -webkit-column-break-inside: avoid;
    -moz-column-break-inside: avoid;
    column-break-inside: avoid;
}

.grid__item.style-post.left {
    padding-left: 18px;
    padding-right: 5px;
}

.style-post {
    padding-bottom: 20px;
}

.style-post img {
    width: 100%;
    -webkit-box-shadow: 4px 4px 3px 0px rgba(0,0,0,0.2);
    -moz-box-shadow: 4px 4px 3px 0px rgba(0,0,0,0.2);
    box-shadow: 4px 4px 3px 0px rgba(0,0,0,0.2);
}

.style-post-header {
    width: 100%;
    height: 17px;
    background: #e5e5e5; 
    background: -webkit-linear-gradient(#e5e5e5 0%, #bababa 100%);
    background: -moz-linear-gradient(top,  #e5e5e5 0%, #bababa 100%); 
    background: -o-linear-gradient(#e5e5e5 0%, #bababa 100%);
    background: linear-gradient(#e5e5e5 0%, #bababa 100%);  
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#e5e5e5', endColorstr='#bababa',GradientType=0 );
    border-top-left-radius: 4px;
    border-top-right-radius: 4px; 
    border-top: 1px solid #fff;
    border-bottom: 1px solid #686868; 
}   

.browser-dot {
    display: block;
    float: left;
    height: 8px;
    width: 8px;
    margin-top: 4px;
    margin-left: 4px;
    background-size: 100%;
}

.browser-dot.red-dot {
    background-image: url({{ 'red-dot.png' | asset_url }});
    margin-left: 7px;
}

.browser-dot.yellow-dot {
    background-image: url({{ 'yellow-dot.png' | asset_url }});
}

.browser-dot.green-dot {
    background-image: url({{ 'green-dot.png' | asset_url }});
}

.cloud-background {
    background-image: url({{ 'clouds.jpg' | asset_url }});
}

.space-background {
    background-image: url({{ 'space-background.jpg' | asset_url }});
}



@media only screen and (max-width: 768px) {
    .grid.masonary-grid {
        -webkit-column-count: 2;
        -webkit-column-gap: 0;
        -moz-column-count: 2;
        -moz-column-gap: 0;
        column-count: 2;
        column-gap: 0;
    }
}

@media only screen and (max-width: 480px) {
    .grid.masonary-grid {
        -webkit-column-count: 1;
        -webkit-column-gap: 0;
        -moz-column-count: 1;
        -moz-column-gap: 0;
        column-count: 1;
        column-gap: 0;
    }

    .grid__item.style-post.left {
        padding-left: 30px;
        padding-right: 0;
    }

    .style-blog-title {
        max-width: 290px;
    }
}






