#shipping th,
td.center {
	text-align: center;
}

#shipping th {
	text-transform: uppercase;
    color: #077cff;
    border: 4px solid #077cff;
    padding: 6px;
    font-size: 12px;
    letter-spacing: 1px;
}

table, tr, th, td {
	border: 0;
}

table.domestic-table th,
table.domestic-table td {
	width: 50%;
}


table.international-table th,
table.international-table td {
	width: 33.33%;
}

.shipping-paragraph {
    padding-bottom: 25px;
}

#shipping table {
	margin: 30px 0 45px;
}

#shipping td {
	border-bottom: 1px solid #f2d6a0;
	padding: 20px 0;
}
