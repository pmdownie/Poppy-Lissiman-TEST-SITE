.site-header {
	padding: 0;
	background-color: #f7f7f7;
}

.icon-hamburger {
	display: block;
	width: 18px;
	height: 2px;
	background-color: #222;
	transition: background-color 0.3s;
	cursor: pointer;
}

.icon-hamburger:before,
.icon-hamburger:after {
	position: absolute;
	margin-left: -9px;
	width: 18px;
	height: 2px;
	background: #222;
	content: '';
	transition: transform 0.3s;
	cursor: pointer;
}

.icon-hamburger:before {
	transform: translateY(-4px);
	top: inherit;
    left: inherit;
}

.icon-hamburger:after {
	transform: translateY(4px);
}

body.js-drawer-open-left .icon-hamburger {
	background-color: transparent;
}

body.js-drawer-open-left .icon-hamburger:before {
	transform: translateY(0) rotate(45deg);
}

body.js-drawer-open-left .icon-hamburger:after {
	transform: translateY(0) rotate(-45deg);
}

