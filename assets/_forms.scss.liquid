
input {
	border: 0;
	font-family: "futura-pt", sans-serif;
	font-size: 14px;
	letter-spacing: 0.5px;
	color: #222;
	background-color: transparent;
	border-bottom: 2px solid #222;
	border-radius: 0; 
}

select.form {
    width: 100%;
    border: 2px solid #f2d6a0;
    letter-spacing: 0;
    color: #222;
    background-image: url('https://cdn.shopify.com/s/files/1/1087/1054/t/2/assets/filter-down.png?4534834210000004863');
    background-repeat: no-repeat;
    background-position: 96% center;
    cursor: pointer;
    font-family: "futura-pt", sans-serif;
    border-radius: 0;
}

.input-group .input-group-field:first-child,
.input-group .input-group-btn:last-child>.btn {
	border-radius: 0;
}

.form-vertical input.input-full {
	border-bottom-color: #f2d6a0;
	color: #ef4315;
	padding: 10px;
}

.input-group-btn .btn {
	background-color: transparent;
	color: #222;
	border-bottom: 2px solid #222;
}

.login--btn.btn {
	background-color: transparent;
	border: 3px solid #077cff;
	color: #077cff;
	letter-spacing: 1px;
	font-weight: 600;
	border-radius: 0; 
	margin-top: 30px;
}

.form-vertical {
	margin-bottom: 35px;
}