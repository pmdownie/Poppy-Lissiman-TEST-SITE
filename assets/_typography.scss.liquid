body,h1,.h1,h2,.h2,h3, .h3,h4,h5,h6,.h6,p,li,a,span {
	font-family: "futura-pt", sans-serif;
}

h1,h1 a,.h1,.h1 a,h2,h2 a,.h2,.h2 a,h3,h3 a,h4,h4 a {
	color: #077cff;
}

h1, .h1 {
	font-size: 110px;
	line-height: 90px;
	text-transform: uppercase;
	margin-bottom: 0;
}

h1.page {
	margin-bottom: 35px;
}

h2,.h2 {
	font-size: 90px;
	line-height: 76px;
	margin-bottom: 40px;
	text-transform: uppercase;
}

h3, .h3,
h3 a, .h3 a {
	font-size: 35px;
	line-height: 34px;
}

h4, .h4 {
	font-size: 25px;
	line-height: 28px;
}

h5, h5 a, .h5, .h5 a {
	color: #222;
}

h6, .h6 {
	text-transform: uppercase;
}

h5.blue {
	color: #077cff;
	text-transform: uppercase;
}

h5.border-bottom {
	border-bottom: 1px solid #efefef;
	padding-bottom: 8px;
}

h5.margin-top,
h6.margin-top {
    margin-top: 25px;
}





@media only screen and (max-width: 768px) {
	h1, .h1 {
		font-size: 80px;
    	line-height: 65px;
	}
	
    h2, .h2 {
    	font-size: 70px;
    	line-height: 60px;
    }
}

